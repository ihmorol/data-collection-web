# MemeConsole Environment Variables
# Copy to .env.local and fill in the values

# Supabase — Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=<REPLACE>
NEXT_PUBLIC_SUPABASE_ANON_KEY=<REPLACE>
SUPABASE_SERVICE_ROLE_KEY=<REPLACE>

# Admin bootstrap (used by scripts/seed-admin.ts)
ADMIN_BOOTSTRAP_USERNAME=<REPLACE>
ADMIN_BOOTSTRAP_PASSWORD=<REPLACE>

# Optional fallback for bootstrap script compatibility
ADMIN_USERNAME=
ADMIN_PASSWORD=

# Session — used to sign JWT tokens (min 32 chars)
SESSION_SECRET=<REPLACE>

# Session token claims
JWT_ISSUER=memeconsole
JWT_AUDIENCE=memeconsole-web

# Rate limiting (optional but recommended in production)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Optional CSRF origin allowlist (comma-separated)
ALLOWED_ORIGINS=
